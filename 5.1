#include <iostream>
#include <vector>


int main()
{
    std::vector <int> vector;
    int elements, V_size;
    std::cout << "Podaj rozmiar wektora: ";
    std::cin >> V_size;
    int wartosc = 0, max = 0, indeks = 0;

    while (vector.size() != V_size) {
        std::cout << "Podaj Element Wektora: ";
        std::cin >> elements;
        vector.push_back(elements);
    }
    std::cout << std::endl;
    for (int x = 0; x < vector.size(); x++) {
        wartosc = vector[x];
        if (wartosc >= max) {
            indeks = x;
            max = wartosc;
        }
    }
    std::cout << "Wartosc elementu maksymalnego wektora: " << max << std::endl;
    std::cout << "Numer indeksu elementu maksymalnego: " << indeks;
    return 0;
}
